<h1>CUSTOMER LIST</h1>
<table border="2" width="100%">
  <tr>
    <th>ID</th>
    <th>Customer Name</th>
    <th>Customer Surname</th>
    <th>Gender</th>
    <th>Mail</th>
    <th>Phone</th>
    <th>Address</th>
    <th colspan="3"></th>
  </tr>
  <% @customers.each do |v| %>
      <tr>
        <td>
          <%= v.id %>
        </td>
        <td>
          <%= v.cusFName %>
        </td>
        <td>
          <%= v.cusLName %>
        </td>
        <td>
          <%= v.cusGender %>
        </td>
        <td>
          <%= v.cusMail %>
        </td>
        <td>
          <%= v.cusPhone %>
        </td>
        <td>
          <%= v.cusAdress %>
        </td>
      </tr>
  <% end %>
</table>